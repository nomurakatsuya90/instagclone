<p id="notice"><%= notice %></p>

<h1><%= t('favorites.FavoritePictures') %></h1>

<table>
  <thead>
    <tr>
      <th><%= t('application.Image') %></th>
      <th><%= t('application.Comment') %></th>
      <th><%= t('application.User') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pictures.each do |picture| %>
      <tr>
        <td><%= image_tag picture.image.url , class: "index-img" %></td>
        <td><%= picture.comment %></td>
        <td><%= picture.user&.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Back', pictures_path %>
